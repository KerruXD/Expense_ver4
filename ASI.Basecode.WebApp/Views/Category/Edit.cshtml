@model ASI.Basecode.Data.Models.Category

<div class="pt-5">
    <h1>Edit Category</h1>

    <form method="post" asp-action="Edit" onsubmit="return confirm('Do you wish to save changes?');">
        
        <input type="hidden" asp-for="CategoryID" />

        <div class="form-group">
            <label>Category Name</label>
            <input type="text" class="form-control" asp-for="CategoryName" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back</a>
    </form>
</div>